#include <iostream>
using namespace std;
int main() {
    int n, sum = 0, i = 1;
    cout << "Enter a positive integer: ";
    cin >> n;
    if (n <= 0) {
        cout << "Please enter a positive integer." << endl;
        return 1;
    }
    while (i <= n) {
        sum += i;
        i++;
    }
    cout << "The sum of the first " << n << " natural numbers is " << sum << "." << endl;
    return 0;
}


OUTPUT:-
Enter a positive integer: 8
The sum of the first 8 natural numbers is 36.
