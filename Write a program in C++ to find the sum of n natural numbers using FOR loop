#include <iostream>
using namespace std;
int main() {
    int n, sum = 0;
    cout << "Enter a positive integer: ";
    cin >> n;
    if (n <= 0) {
        cout << "Please enter a positive integer." << endl;
        return 1;
    }
    for (int i = 1; i <= n; ++i) {
        sum += i;
    }
    cout << "The sum of the first " << n << " natural numbers is " << sum << "." << endl;
    return 0;
}


OUTPUT:-
Enter a positive integer: 3
The sum of the first 3 natural numbers is 6.
