#include <iostream>
using namespace std;
class MyClass {
public:
    MyClass(int value);
    void display();
private:
    int data;
};
MyClass::MyClass(int value) {
    data = value;
}
void MyClass::display() {
    cout << "The value is: " << data << endl;
}
int main() {
    MyClass obj(42); 
    obj.display();   
    return 0;
}


OUTPUT:-
The value is: 42
